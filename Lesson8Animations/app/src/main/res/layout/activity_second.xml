<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context="viewpager.animations.lesson8animations.SecondActivity">
<LinearLayout
    android:id="@+id/buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_weight="0.1"
        android:id="@+id/prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prev_button"/>
    <Button
        android:layout_weight="0.4"
        android:id="@+id/fragment1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_first_fragment"/>
    <Button
        android:layout_weight="0.4"
        android:id="@+id/fragment2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_second_fragment"/>

</LinearLayout>
 <FrameLayout
     android:layout_alignTop="@id/buttons"
     android:id="@+id/frame1"
     android:layout_marginTop="72dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

 </FrameLayout>

    <FrameLayout
        android:layout_alignTop="@id/frame1"
        android:id="@+id/frame2"
        android:layout_marginTop="72dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>
</RelativeLayout>
